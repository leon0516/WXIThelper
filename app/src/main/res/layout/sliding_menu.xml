<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_avatar_bg">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/face"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                app:border_width="2dp"
                app:border_color="#ffffffff"
                android:id="@+id/headImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_login"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                android:id="@+id/headtext"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="60dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/headImage"
                android:layout_toEndOf="@+id/headImage" />
        </LinearLayout>

        <fragment
            android:id="@+id/sliging_list"
            android:name="cn.openiotlab.wxithelper.SlidingListFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>
