<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="fill_parent"
    android:id="@+id/LL_cj"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.15"
        android:id="@+id/RL_xueqi"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="第"
            android:id="@+id/textView6"

            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/chengji_xueqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="2"
            android:textColor="#ffff1c12"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="学期"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/chengji_xueqi" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:id="@+id/RL_kemingcheng"
        android:layout_alignParentTop="true"

        android:layout_toStartOf="@+id/linearLayout2">
        <TextView
            android:id="@+id/chengji_kechengmingchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大学体育!"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2d2b1dff"
            android:maxLength="7"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout2">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="成绩:"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/chengji_fenshu" />
        <TextView
            android:id="@+id/chengji_fenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:text="75分"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>


</LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通识课"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:id="@+id/chengji_leibie"
        android:layout_below="@+id/LL_cj"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18学时"
        android:id="@+id/chengji_xueshi"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/LL_cj"
        android:layout_toEndOf="@+id/chengji_leibie" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="2学分"
        android:id="@+id/chengji_xuefen"
        android:layout_below="@+id/LL_cj"
        android:layout_toEndOf="@+id/chengji_xueshi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总评成绩"
        android:singleLine="true"
        android:layout_marginRight="8dp"
        android:id="@+id/chengji_kaoshixingzhi"
        android:layout_alignTop="@+id/chengji_xuefen"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="2.5"
        android:singleLine="true"
        android:textColor="#ff2aa7ff"
        android:id="@+id/chengji_jidian"
        android:layout_alignTop="@+id/chengji_kaoshixingzhi"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绩点:"
        android:singleLine="true"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/chengji_jidian"
        android:layout_toStartOf="@+id/chengji_jidian" />








</RelativeLayout>
